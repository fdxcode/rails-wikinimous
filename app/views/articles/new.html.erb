<div class="container mt-4 mx-auto col-4">
  <h2 class="text-center">Crear Articulo</h2>
  <form class="edit_articles" action="/articles" accept-charset="UTF-8" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :articles, @articles %>
    <div class="form-group">
      <label for="articles_title">Title</label>
      <input type="text" class="form-control" id="articles_title" name="article[title]">
    </div>
    <div class="form-group">
      <label for="article_details">Details</label>
      <input type="text" class="form-control" id="article_details" name="article[content]">
    </div>
    <button type="submit" class="btn btn-primary w-100 mt-2"><i class="far fa-edit"></i> Crear</button>
  </form>
</div>
